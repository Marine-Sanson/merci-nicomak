{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="text-center mb-3">
                Vous êtes connecté·e en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Me déconnecter</a>
            </div>
        {% endif %}

        <div class="w-50 mx-auto">
            <h1 class="h3 text-center m-3 font-weight-normal">Connectez vous</h1>
            <label for="username" class="mt-3">Nom d'utilisat·eur·rice</label>
            <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control mt-3" autocomplete="username" required autofocus>
            <label for="password" class="mt-3">Mot de passe</label>
            <input type="password" name="_password" id="password" class="form-control mt-3" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <input type="checkbox" name="_remember_me" id="_remember_me">
                    <label for="_remember_me">Remember me</label>
                </div>
            #}

            <button class="btn btn-lg btn-primary mt-3" type="submit">
                Me connecter
            </button>
        <div>
    </form>
{% endblock %}
