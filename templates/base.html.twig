<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}L'app des mercis de Nicomak - par Marine Sanson{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('/img/favicon.png') }}"/>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        <header class="">
            <nav class="navbar navbar-expand">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item m-auto">
                            <a class="nav-link text-center" href="{{ path('app_home') }}"><img class="logoNav rounded m-2" src="{{ asset('/img/favicon.png') }}"/></a>
                        </li>
                        {% if app.user %}
                            <li class="nav-item m-auto">
                                <a class="btn nav-link text-center mx-2" href="{{ path('app_add_merci') }}">Remercier</a>
                            </li>
                            <li class="nav-item m-auto">
                                <a class="btn nav-link text-center mx-2" href="{{ path('app_manage_mercis') }}">Gérer mes mercis</a>
                            </li>
                            <li class="nav-item m-auto">
                                <a class="btn nav-link text-center mx-2" href="{{ path('app_logout') }}">Me déconnecter</a>
                            </li>
                        {% else %}
                            <li class="nav-item m-auto">
                                <a class="btn nav-link text-center mx-2" href="{{ path('app_login') }}">Me connecter</a>
                            </li>
                        {% endif %}
                    </ul>
            </nav>

            <p class="d-flex justify-content-center mx-auto"><span class="mt-4 fs-1">Bienvenue dans l'app des mercis de </span><img class="logo" src="{{ asset('img/logo.png') }}" alt="Logo de Nicomak"/></p>
        </header>
        <main class="container">

            {% block body %}{% endblock %}
        </main>
    </body>
</html>
